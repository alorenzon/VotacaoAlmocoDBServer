<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="imgLogo">
                <img src="~/Images/logo.png" />
            </div>
            <div class="float-left">
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", null, null)</li>
                        <li>@Html.ActionLink("Colaboradores", "Index", "Colaborador", null, null)</li>
                        <li>@Html.ActionLink("Restaurantes", "Index", "Restaurante", null, null)</li>
                        <li>@Html.ActionLink("Votação", "Index", "Votacao", null, null)</li>
                        <li>@Html.ActionLink("Resultado das votações", "Index", "Resultado", null, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
